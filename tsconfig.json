{
    "compilerOptions": {
        "baseUrl": "./",
        "declaration": true,
        "esModuleInterop": true,
        "jsx": "react",
        "jsxFactory": "JSX.createElement",
        "jsxFragmentFactory": "JSX.Fragment",
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es2015",
        "lib": ["dom"],
        "removeComments": true,
        "skipLibCheck": true,
        "strict": true,
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "docs-dist"
    ]
}
